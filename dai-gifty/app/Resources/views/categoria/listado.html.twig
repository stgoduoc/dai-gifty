{% extends 'base.html.twig' %}

{% block title %}
    Categorías
{% endblock %}

{% block body %}

    <h1>Categorías</h1>

    <a class="btn btn-success" href="{{ path('categoriaCrear') }}" role="button">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Nuevo
    </a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>
                    Nombre                
                </th>
                <th>
                    Descripción
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for o in objetos %}
                <tr>
                    <td>{{ o.id }}</td>
                    <td>{{ o.nombre }}</td>
                    <td>{{ o.descripcion}}</td>
                    <td>
                        <a class="btn btn-info" href="" role="button">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            Editar
                        </a>
                        <a class="btn btn-danger" href="{{ path('categoriaEliminar', {'id': o.id}) }}" role="button">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            Eliminar
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No se encontraron categorías.</td>
                </tr>
            {% endfor %}
        {% endblock %}
